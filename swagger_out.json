{
  "swagger": "3.0.0",
  "info": {
    "title": "API de usuarios y Servicios",
    "description": "API para gestionar usuarios y servicios, usando metodos crud, con autenticacion JWT y encriptacion de contrase単as con bcryptjs y base de datos MongoDB",
    "version": "1.0.0"
  },
  "host": "https://backend-autentificacion.onrender.com",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/v1/users/sigin": {
      "post": {
        "description": "Permite craer un usuario",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Maria Pe単a"
                },
                "mail": {
                  "example": "mpena@gmail.com"
                },
                "description": {
                  "example": "Alumna de Piano"
                },
                "password": {
                  "example": "Ingresar password de 6 caracteres"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuario creado!!"
          },
          "400": {
            "description": "No se pudo crear usuario!!"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/users/login": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "mail": {
                  "example": "amunoz@gmail.com"
                },
                "password": {
                  "example": "Ingresar paswor de 6 caracteres"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login exitoso!!"
          },
          "400": {
            "description": "Mail o contrase単a incorrecta"
          }
        }
      }
    },
    "/api/v1/users/loginVerification": {
      "get": {
        "description": "Verifica el logeo del usuario, se debe ingresar el Token.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Usuario no autorizado!!"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/users/{id}": {
      "put": {
        "description": "Modifica usuario por ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Juan Pablo"
                },
                "mail": {
                  "example": "juanpablo@hotmail.com"
                },
                "description": {
                  "example": "Alumno de Guitarra"
                },
                "password": {
                  "example": "Ingresar contrase単a de 6 caracteres"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario modificado!!"
          },
          "400":{
            "description": "No se pudo modificar el usuario!!"
          },
          "500": {
            "description": "Internal Server Error!!"
          }
        }
      }
    },
    "/api/v1/services/": {
      "get": {
        "description": "Obtiene todos los servicios creados en la base de datos.",
        "responses": {
          "200":{
            "description": "ok."
          },
          "404":{
            "description": "No hay servicios en la base de datos!!"
          },
          "500":{
            "description": "Internal Server Error!!"
          },
          "default": {
            "description": ""
          }
        }
      },
      "post": {
        "description": "Crea un nuevo servicio en la base de datos.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema":{
              "type": "object",
              "properties": {
                "name":{
                  "example": "Clases de bajo"
                },
                "price":{
                  "example": 10000
                },
                "description": {
                  "example": "este servicio consiste en..."
                }

              }

            }
          
          }
        ],
        "responses": {
          "201":{
            "description": "Servicio Creado!!"
          },
          "400":{
            "description": "No se pudo crear el servicio!!"
          },
          "500":{
            "description": "Internal Server Error"
          },
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/services/{id}": {
      "put": {
        "description": "Modifica un servicio por ID.",
        "parameters":[
         {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Curso de Bajo Electrico"
                },
                "price": {
                  "example": 10000
                },
                "description": {
                  "example": "El curso de bajo electrico consiste en..."
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Servicio modificado!!"
          },
          "400": {
            "description": "No se pudo modificar el servicio!!"
          },
          "500": {
            "description": "Internal Server Error!!"
          }
          }
        },
      "delete": {
        "description": "Permite eliminar un servicio por ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          } 
        ],
        "responses": {
          "200": {
            "description": "El servicio ha sido eliminado!!"
          },
          "404": {
            "description": "No se encuentra el ID del servicio a eliminar"
          },
          "500": {
            "description": "Internal Server Error"
          }
          
        }
      },
      "get": {
        "description": "Permite obtener un servicio por ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }         
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "No se encontro el Id del servicio"
          },
          "500": {
            "description": "Internal Server Error"
          }
          
        }
      }
    }
  }
}